{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/neuron-experiment-config.schema.json",
  "title": "NEURON Experiment Configuration",
  "description": "Schema for NEURON YAML experiment configuration files",
  "type": "object",
  "required": ["metadata", "model", "stimuli", "recordings", "simulation"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Experiment name"
        },
        "description": {
          "type": "string",
          "description": "Experiment description"
        },
        "version": {
          "type": "string",
          "description": "Version",
          "default": "1.0.0"
        }
      }
    },
    "environment": {
      "type": "object",
      "properties": {
        "temperature_celsius": {
          "type": "number",
          "description": "Temperature in Celsius",
          "default": 36.0
        },
        "random_seed": {
          "type": "integer",
          "description": "Random seed for reproducibility"
        },
        "mechanisms": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required NEURON mechanisms"
        }
      }
    },
    "model": {
      "type": "object",
      "required": ["morphology", "biophysics"],
      "properties": {
        "morphology": {
          "type": "object",
          "required": ["type", "sections"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["single_compartment", "multi_section"],
              "description": "Morphology type"
            },
            "sections": {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                  "type": "object",
                  "required": ["L", "diam"],
                  "properties": {
                    "L": {
                      "type": "number",
                      "minimum": 0,
                      "description": "Section length in micrometers"
                    },
                    "diam": {
                      "type": "number",
                      "minimum": 0,
                      "description": "Section diameter in micrometers"
                    },
                    "nseg": {
                      "type": "integer",
                      "minimum": 1,
                      "description": "Number of segments",
                      "default": 1
                    }
                  }
                }
              },
              "additionalProperties": false
            },
            "connections": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["parent", "child"],
                "properties": {
                  "parent": {
                    "type": "string",
                    "description": "Parent section name"
                  },
                  "child": {
                    "type": "string",
                    "description": "Child section name"
                  },
                  "parent_loc": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Connection location on parent (0-1)",
                    "default": 1.0
                  },
                  "child_loc": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "description": "Connection location on child (0-1)",
                    "default": 0.0
                  }
                }
              }
            }
          }
        },
        "biophysics": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_][a-zA-Z0-9_]*$": {
              "type": "object",
              "properties": {
                "Ra": {
                  "type": "number",
                  "minimum": 0,
                  "description": "Axial resistance in Ohm*cm",
                  "default": 100.0
                },
                "cm": {
                  "type": "number",
                  "minimum": 0,
                  "description": "Membrane capacitance in uF/cm^2",
                  "default": 1.0
                },
                "mechanisms": {
                  "type": "object",
                  "patternProperties": {
                    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                      "type": "object",
                      "patternProperties": {
                        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "stimuli": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "section", "delay_ms", "duration_ms", "amplitude_nA"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Stimulus name"
          },
          "type": {
            "type": "string",
            "enum": ["IClamp"],
            "description": "Stimulus type",
            "default": "IClamp"
          },
          "section": {
            "type": "string",
            "description": "Target section name"
          },
          "loc": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Location on section (0-1)",
            "default": 0.5
          },
          "delay_ms": {
            "type": "number",
            "minimum": 0,
            "description": "Delay in milliseconds"
          },
          "duration_ms": {
            "type": "number",
            "minimum": 0,
            "description": "Duration in milliseconds"
          },
          "amplitude_nA": {
            "type": "number",
            "description": "Amplitude in nanoamperes"
          }
        }
      }
    },
    "recordings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "variable", "section"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Recording name"
          },
          "variable": {
            "type": "string",
            "description": "Variable to record (e.g., 'v', 'i')"
          },
          "section": {
            "type": "string",
            "description": "Target section name"
          },
          "loc": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Location on section (0-1)",
            "default": 0.5
          }
        }
      }
    },
    "simulation": {
      "type": "object",
      "required": ["tstop_ms"],
      "properties": {
        "tstop_ms": {
          "type": "number",
          "minimum": 0,
          "description": "Simulation end time in milliseconds"
        },
        "dt_ms": {
          "type": "number",
          "minimum": 0,
          "description": "Time step in milliseconds",
          "default": 0.025
        }
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "directory": {
          "type": "string",
          "description": "Output directory",
          "default": "results"
        },
        "save_traces": {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "enum": ["csv"],
              "description": "Trace format",
              "default": "csv"
            }
          }
        },
        "plot": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable plotting",
              "default": true
            },
            "variables": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Variables to plot"
            },
            "save_as": {
              "type": "string",
              "description": "Plot filename",
              "default": "voltage.png"
            }
          }
        }
      }
    }
  }
}